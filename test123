apiVersion: apps/v1
kind: Deployment
metadata:
  name: echo-exkube
  namespace:  exkube
spec:
  replicas: 1
  selector:
    matchLabels:
      app: echo-studentX
  strategy: {}
  template:
    metadata:
      labels:
        app: echo-studentX
    spec:
      containers:
      - image: registry.k8s.io/echoserver:1.9
        name: echo-xkube-cont
        ports:
        - containerPort:  8081
-----------------------------------------------------------
apiVersion: v1
kind: Service
metadata:
  name: echo-exkube-svc
  namespace: exkube
spec:
  type: NodePort
  selector:
    app:  echo-studentX
  ports:
    - port: 80
      targetPort: 8081
      nodePort: 31202
----------------------------------------------------------------------
[root@node3 ~]# cat random-logger-pod.yml 
